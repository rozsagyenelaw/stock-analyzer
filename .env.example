# Twelve Data API (Stock prices, fundamentals)
TWELVE_DATA_API_KEY=your_twelve_data_api_key

# OpenAI API (AI analysis features)
OPENAI_API_KEY=your_openai_api_key

# News API (Real news data - get free key at https://newsapi.org)
NEWS_API_KEY=your_newsapi_key

# Reddit API (Social sentiment - get at https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=StockAnalyzer/1.0

# Alpha Vantage API (Economic indicators, fundamentals - get free key at https://www.alphavantage.co)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# JWT Secret (for authentication)
JWT_SECRET=your_secure_random_string_min_32_chars

# Gmail SMTP (for email alerts) - Optional
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_app_password

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Database (SQLite by default, or PostgreSQL connection string)
DATABASE_URL=./database/stockanalyzer.db
# DATABASE_URL=postgresql://user:password@localhost:5432/stockanalyzer

# Redis (for caching) - Optional
REDIS_URL=redis://localhost:6379
